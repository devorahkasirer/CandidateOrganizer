<div class="row">
    <div class="well col-md-4 col-md-offset-4">
        <h2>New Candidate</h2>
        <form method="post" action="/home/candidate">
            <input type="text" class="form-control" placeholder="First Name" name="firstName"/>
            <br />
            <input type="text" class="form-control" placeholder="Last Name" name="lastName" />
            <br />
            <input type="text" class="form-control" placeholder="Email" name="email" />
            <br />
            <input type="text" class="form-control" placeholder="Phone Number" name="number" />
            <br />
            <textarea class="form-control" rows="6" name="note" placeholder="Notes"></textarea>
            <br />
            <button class="btn btn-success">Add Candidate</button>
        </form>
    </div>
</div>